{
	"compilerOptions": {
		"target": "es2019",
		"module": "commonjs",
		"lib": [
			"ES6",
			"ES2019"
		],
		"rootDir": "src",
		"outDir": "dist",
		"strict": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true
	},
	"exclude": [
		"node_modules",
		"dist",
		"coverage",
		"src/__tests__",
		"src/**/*.test.ts",
		"src/**/*.spec.ts",
		"src/**/*.test.js",
		"src/**/*.spec.js"
	]
}
